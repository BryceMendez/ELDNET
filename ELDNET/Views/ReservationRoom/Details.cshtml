@model ELDNET.Models.ReservationRoom

@{
    ViewData["Title"] = "Reservation Details";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-gradient-success text-white py-3">
            <h3 class="mb-0 text-center">Reservation Room Details</h3>
            <p class="mb-0 text-center">Comprehensive information for this reservation.</p>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary mb-3">General Information</h5>
                    <hr class="mt-0 mb-3" />
                    <dl class="row mb-0">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.OrganizationName)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.OrganizationName)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ActivityTitle)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ActivityTitle)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ActivityDate)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ActivityDate)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Speaker)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Speaker)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Venue)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Venue)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PurposeObjective)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PurposeObjective)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NatureOfActivity)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NatureOfActivity)</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h5 class="text-primary mb-3">Reservation Specifics</h5>
                    <hr class="mt-0 mb-3" />
                    <dl class="row mb-0">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DateNeeded)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DateNeeded)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TimeFrom)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TimeFrom)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TimeTo)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TimeTo)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Participants)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Participants)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.EquipmentFacilities)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EquipmentFacilities)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.SourceOfFunds)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.SourceOfFunds)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.RoomNumber)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.RoomNumber)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ReservedBy)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ReservedBy)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Date)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Date)</dd>
                    </dl>
                </div>
            </div>
            <hr class="my-4" />
            <div class="text-center">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>