@model ELDNET.Models.LockerRequest

@{
    ViewData["Title"] = "Create Locker Request";
}

<div class="container py-4 animate__animated animate__fadeIn">
    <div class="custom-card shadow-lg border-0">
        <div class="card-header text-white text-center py-4" style="background: linear-gradient(45deg, #FFBF00);">
            @* Distinct Green gradient! *@
            <h2 class="mb-2 fw-bold"><i class="bi bi-lock-fill me-2"></i>Create Locker Request</h2> @* New icon for Locker Request *@
            <p class="mb-0 text-white-50">Submit your request to reserve a school locker.</p>
        </div>
        <div class="card-body p-5">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <h5 class="text-blue-primary mb-4 pb-2 border-bottom border-blue-primary-subtle">
                    @* Using text-blue-primary for section header *@
                    <i class="bi bi-person-circle me-2"></i>General Information
                </h5>
                <div class="row g-4 mb-5">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label fw-semibold"></label>
                        <input asp-for="Name" class="form-control" placeholder="Full Name" />
                        <span asp-validation-for="Name" class="text-danger mt-1 d-block"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="IdNumber" class="form-label fw-semibold"></label>
                        <input asp-for="IdNumber" class="form-control" placeholder="ID Number" />
                        <span asp-validation-for="IdNumber" class="text-danger mt-1 d-block"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="LockerNumber" class="form-label fw-semibold"></label>
                        <input asp-for="LockerNumber" class="form-control" placeholder="Preferred Locker Number" />
                        <span asp-validation-for="LockerNumber" class="text-danger mt-1 d-block"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Semester" class="form-label fw-semibold"></label>
                        <input asp-for="Semester" class="form-control" placeholder="Semester (e.g. 1st Sem 2025)" />
                        <span asp-validation-for="Semester" class="text-danger mt-1 d-block"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ContactNumber" class="form-label fw-semibold"></label>
                        <input asp-for="ContactNumber" class="form-control" placeholder="Contact Number" />
                        <span asp-validation-for="ContactNumber" class="text-danger mt-1 d-block"></span>
                    </div>
                </div>

                <h5 class="text-blue-secondary mt-4 mb-4 pb-2 border-bottom border-blue-secondary-subtle">
                    @* Using text-blue-secondary for section header *@
                    <i class="bi bi-file-earmark-text me-2"></i>Required Documents
                </h5>
                <div class="row g-4 mb-5">
                    <div class="col-md-6">
                        <label asp-for="StudyLoadFile" class="form-label fw-semibold">Attach Study Load</label>
                        <input asp-for="StudyLoadFile" type="file" class="form-control" />
                        <span asp-validation-for="StudyLoadFile" class="text-danger mt-1 d-block"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="RegistrationFile" class="form-label fw-semibold">Attach Registration Form</label>
                        <input asp-for="RegistrationFile" type="file" class="form-control" />
                        <span asp-validation-for="RegistrationFile" class="text-danger mt-1 d-block"></span>
                    </div>
                </div>

                @* Changed this div to remove the "text-center" class *@
                <div class="mb-5 form-check">
                    <input asp-for="AcceptTerms" class="form-check-input" type="checkbox" />
                    <label asp-for="AcceptTerms" class="form-check-label fw-semibold">I accept the Terms and Conditions</label>
                    <span asp-validation-for="AcceptTerms" class="text-danger mt-1 d-block"></span>
                </div>


                <div class="col-12 text-center pt-4 border-top">
                    <div class="d-inline-flex align-items-center justify-content-center gap-3 mt-3">
                        <!-- Submit Button -->
                        <button type="submit"
                                class="btn d-flex align-items-center justify-content-center fw-semibold shadow-sm"
                                style="background: linear-gradient(45deg, #FFBF00); color: white; border: none; border-radius: 50px; padding: 8px 18px; font-size: 15px;">
                            <i class="bi bi-check-circle me-2 fs-5"></i>Submit
                        </button>

                        <!-- Back to List Button -->
                        <a asp-action="Index"
                           class="btn d-flex align-items-center justify-content-center fw-semibold shadow-sm"
                           style="background-color: gray; color: white; border: none; border-radius: 50px; padding: 8px 18px; font-size: 15px;">
                            <i class="bi bi-arrow-left me-2 fs-5"></i>View List
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>