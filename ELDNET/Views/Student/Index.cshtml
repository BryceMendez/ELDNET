@model IEnumerable<ELDNET.Models.Student>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4 align-items-center">
        <div class="col-6">
            <h2 class="text-secondary mb-0">Student Registry</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Student" asp-action="Create" class="btn btn-primary rounded-pill shadow-sm">
                <i class="bi bi-plus-lg"></i> Create New Student
            </a>
        </div>
    </div>
    <hr /> @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover modern-table" style="width:100%">
            <thead>
                <tr>
                    <th class="text-start">ID</th>
                    <th class="text-start">First Name</th>
                    <th class="text-start">Last Name</th>
                    <th class="text-start">Course</th>
                    <th class="text-start">Email</th>
                    <th class="text-start">Date Registered</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="5%">
                            @obj.Id
                        </td>
                        <td width="15%">
                            @obj.Firstname
                        </td>
                        <td width="15%">
                            @obj.Lastname
                        </td>
                        <td width="10%">
                            @obj.Course
                        </td>
                        <td width="20%">
                            @obj.Email
                        </td>
                        <td width="20%">
                            @obj.DateCreated.ToShortDateString()
                        </td>

                        <td width="15%">
                            <div class="d-flex justify-content-center action-btn-group">
                                <a asp-action="Edit" asp-route-id="@obj.Id" class="action-btn action-edit">Edit</a>
                                <a asp-action="Details" asp-route-id="@obj.Id" class="action-btn action-details">Details</a>
                                <a asp-action="Delete" asp-route-id="@obj.Id" class="action-btn action-delete">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
        else
    {
        <div class="card shadow-sm mt-4">
            <div class="card-body text-center p-5">
                <i class="bi bi-info-circle-fill text-info display-4"></i>
                <h4 class="mt-3 text-secondary">No Student Records Found</h4>
                <p class="text-muted">Click "Create New Student" to add the first entry.</p>
            </div>
        </div>
    }
</div>

   