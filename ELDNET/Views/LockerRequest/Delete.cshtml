@model ELDNET.Models.LockerRequest

@{
    ViewData["Title"] = "Delete Locker Request";
}

<div class="container py-4 animate__animated animate__fadeIn">
    <div class="custom-card shadow-lg border-0 confirmation-card">
        <div class="card-header text-white text-center py-4 delete-header">
            <h2 class="mb-2 fw-bold"><i class="bi bi-exclamation-triangle-fill me-2"></i>Delete Locker Request</h2>
            <p class="mb-0 text-white-75">Review the details below before confirming deletion. This action is irreversible.</p>
        </div>
        <div class="card-body p-5">
            <div class="alert alert-danger fade show mb-5" role="alert">
                <h4 class="alert-heading fw-bold">Warning: Permanent Deletion!</h4>
                <p>You are about to permanently delete this locker request. Once deleted, all associated data will be lost and cannot be recovered.</p>
                <hr>
                <p class="mb-0 fw-bold">Please confirm your decision carefully.</p>
            </div>

            <div class="row g-5">
                <!-- Requestor Information Section -->
                <div class="col-lg-6 border-end-lg pe-lg-5">
                    <h5 class="text-danger-dark mb-4 pb-2 border-bottom border-danger-subtle">
                        <i class="bi bi-person-circle me-2"></i>Requestor Information
                    </h5>
                    <dl class="row detail-list-modern">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.IdNumber)</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@Html.DisplayFor(model => model.IdNumber)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ContactNumber)</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@Html.DisplayFor(model => model.ContactNumber)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Semester)</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@Html.DisplayFor(model => model.Semester)</dd>
                    </dl>
                </div>

                <!-- Locker & Document Information Section -->
                <div class="col-lg-6 ps-lg-5">
                    <h5 class="text-danger-secondary mb-4 pb-2 border-bottom border-danger-subtle">
                        <i class="bi bi-key me-2"></i>Locker Information
                    </h5>
                    <dl class="row detail-list-modern">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.LockerNumber)</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@Html.DisplayFor(model => model.LockerNumber)</dd>
                    </dl>

                    <h5 class="text-danger-tertiary mt-5 mb-4 pb-2 border-bottom border-danger-subtle">
                        <i class="bi bi-file-earmark-text me-2"></i>Uploaded Files
                    </h5>
                    <dl class="row detail-list-modern">
                        <dt class="col-sm-4">Study Load File:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.StudyLoadPath))
                            {
                                <a href="@Url.Content(Model.StudyLoadPath)" target="_blank" class="text-danger-tertiary fw-bold text-decoration-none">
                                    <i class="bi bi-file-earmark-arrow-down me-1"></i> View Study Load
                                </a>
                            }
                            else
                            {
                                <span class="text-muted fst-italic">No file uploaded</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Registration Form:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.RegistrationPath))
                            {
                                <a href="@Url.Content(Model.RegistrationPath)" target="_blank" class="text-danger-tertiary fw-bold text-decoration-none">
                                    <i class="bi bi-file-earmark-arrow-down me-1"></i> View Registration Form
                                </a>
                            }
                            else
                            {
                                <span class="text-muted fst-italic">No file uploaded</span>
                            }
                        </dd>
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.AcceptTerms):</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@Html.DisplayFor(model => model.AcceptTerms)</dd>
                    </dl>
                </div>

                <!-- Action Buttons -->
                <div class="col-12 text-center pt-5 border-top">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn-gradient-danger btn-lg me-3 animate__animated animate__pulse animate__infinite" style="min-width: 150px;">
                            <i class="bi bi-trash-fill me-2"></i>Delete
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg" style="min-width: 150px;">
                            <i class="bi bi-arrow-left me-2"></i>Back to List
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>