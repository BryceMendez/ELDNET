@model ELDNET.Models.LockerRequest

@{
    ViewData["Title"] = "Create Locker Request";
}

<link rel="stylesheet" href="~/css/LockerRequest/Create.css" asp-append-version="true" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container py-4 animate__animated animate__fadeIn">
    <div class="custom-card shadow-lg border-0">
        <div class="card-header text-white text-center py-4" style="background: linear-gradient(45deg, #FFBF00, #FFA500);">
            <h2 class="mb-2 fw-bold"><i class="bi bi-lock-fill me-2"></i>Create Locker Request</h2>
            <p class="mb-0 text-white-50">Please fill out the form below to reserve your locker.</p>
        </div>

        <div class="card-body p-5">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <h5 class="text-gold-primary mb-4 pb-2 border-bottom border-gold-primary-subtle">
                    <i class="bi bi-person-circle me-2"></i>General Information
                </h5>
                <div class="row g-4 mb-5">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label fw-semibold"></label>
                        <input asp-for="Name" class="form-control bg-light" readonly />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="IdNumber" class="form-label fw-semibold"></label>
                        <input asp-for="IdNumber" class="form-control bg-light" readonly />
                        <span asp-validation-for="IdNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ContactNumber" class="form-label fw-semibold"></label>
                        <input asp-for="ContactNumber" class="form-control" placeholder="09XXXXXXXXX" />
                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Semester" class="form-label fw-semibold"></label>
                        <input asp-for="Semester" class="form-control" placeholder="e.g. 1st Semester 2024-2025" />
                        <span asp-validation-for="Semester" class="text-danger"></span>
                    </div>
                </div>

                <h5 class="text-gold-secondary mb-4 pb-2 border-bottom border-gold-secondary-subtle">
                    <i class="bi bi-grid-3x3-gap me-2"></i>Locker Details
                </h5>
                <div class="row g-4 mb-5">
                    <div class="col-md-12">
                        <label asp-for="LockerNumber" class="form-label fw-semibold">Select Available Locker</label>
                        <select asp-for="LockerNumber" class="form-select border-warning shadow-sm">
                            <option value="" selected disabled>-- Choose a Locker Number --</option>
                            @if (ViewBag.AvailableLockers is List<string> lockers)
                            {
                                foreach (var locker in lockers)
                                {
                                    <option value="@locker">@locker</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="LockerNumber" class="text-danger"></span>
                        <div class="form-text mt-2"><i class="bi bi-info-circle me-1"></i>Only currently unoccupied lockers are listed.</div>
                    </div>
                </div>

                <h5 class="text-dark mb-4 pb-2 border-bottom fw-bold">
                    <i class="bi bi-file-earmark-text me-2 text-warning"></i>Required Documents
                </h5>
                <div class="row g-4 mb-5">
                    <div class="col-md-6">
                        <label asp-for="StudyLoadFile" class="form-label fw-semibold">Attach Study Load (PDF/Image)</label>
                        <input asp-for="StudyLoadFile" type="file" class="form-control" accept=".pdf,.jpg,.png" />
                        <span asp-validation-for="StudyLoadFile" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="RegistrationFile" class="form-label fw-semibold">Attach Registration Form (PDF/Image)</label>
                        <input asp-for="RegistrationFile" type="file" class="form-control" accept=".pdf,.jpg,.png" />
                        <span asp-validation-for="RegistrationFile" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-5 p-4 rounded bg-light border-start border-4 border-warning">
                    <div class="form-check">
                        <input asp-for="AcceptTerms" class="form-check-input" type="checkbox" id="termsCheck" />
                        <label class="form-check-label fw-semibold text-dark" for="termsCheck">
                            I accept the <a href="javascript:void(0);" data-bs-toggle="modal" data-bs-target="#termsModal" class="text-warning text-decoration-underline">Terms and Conditions</a> for locker usage.
                        </label>
                    </div>
                    <span asp-validation-for="AcceptTerms" class="text-danger small"></span>
                </div>

                <div class="col-12 text-center pt-4 border-top">
                    <div class="d-inline-flex gap-3">
                        <button type="submit" class="btn btn-warning px-5 py-2 rounded-pill shadow fw-bold"
                                style="background: linear-gradient(45deg, #FFBF00, #FFA500); border: none;">
                            Submit Request
                        </button>
                        <a asp-action="Index" class="btn btn-secondary px-5 py-2 rounded-pill shadow">
                            <i class="bi bi-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="termsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header modal-header-gold">
                <h5 class="modal-title fw-bold"><i class="bi bi-shield-check me-2"></i>Locker Standard Protocol</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <h6>1. Duration of Occupancy</h6>
                <p>Valid for one (1) Academic Year. All slots automatically expire after a year.</p>
                <h6>2. Renewal</h6>
                <p>You must request again next year to renew your slot.</p>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="agreeBtn" class="btn btn-warning fw-bold" data-bs-dismiss="modal">I Understand</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        var errorMessage = '@TempData["error"]';
        if (errorMessage) {
            Swal.fire({
                icon: 'error',
                title: 'Duplicate Request',
                text: errorMessage,
                confirmButtonColor: '#FFA500'
            });
        }

        document.getElementById('agreeBtn').addEventListener('click', function() {
            var checkbox = document.getElementById('termsCheck');
            checkbox.checked = true;
            if ($(checkbox).closest('form').length) {
                $(checkbox).valid();
            }
        });
    </script>
}