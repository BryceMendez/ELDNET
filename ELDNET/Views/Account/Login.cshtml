﻿@{
ViewData["HideNav"] = true;
ViewData["Title"] = "Login";
Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="login-page-container">
    <div class="login-header-nav">
        <div class="login-brand-logo">ELDNET</div>
        <div class="login-nav-links">
            <a href="#">HOME</a>
            <a href="#">ABOUT US</a>
            <a href="#" class="login-nav-active">LOG IN</a>
        </div>
    </div>

    <div class="login-clouds"></div>

    <div class="login-main-content">
        <div class="login-form-panel custom-card">
            <!-- REORDERED: h2 first, then login-subtitle -->
            <h2 class="login-panel-heading">Sign In</h2>
            <h9 class="login-subtitle">Sign In to access Gate Pass, Reservation Room, Locker Request form</h9>

            <form asp-controller="Account" asp-action="Login" method="post" class="login-input-form">
                <div class="login-input-group mb-4">
                    <span class="login-input-icon"><i class="fas fa-envelope"></i></span>
                    <input type="text" class="form-control" id="Username" name="username" placeholder="Email Address" required />
                </div>

                <div class="login-input-group mb-3">
                    <span class="login-input-icon"><i class="fas fa-key"></i></span>
                    <input type="password" class="form-control" id="Password" name="password" placeholder="Password" required />
                    <span class="login-password-toggle"><i class="fas fa-eye-slash"></i></span>
                </div>

                <div class="login-form-options d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check login-remember-me">
                        <input type="checkbox" class="form-check-input" id="RememberMe" name="rememberMe" />
                        <label class="form-check-label" for="RememberMe">Remember Me</label>
                    </div>
                    <a href="#" class="login-forgot-password">Forgot Password?</a>
                </div>

                <button type="submit" class="btn btn-gradient">Sign in</button>

                <div class="login-signup-text text-center mt-4">
                    Don't have an account? <a asp-controller="Account" asp-action="SignUp">Sign up</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const passwordField = document.getElementById('Password');
            const passwordToggle = document.querySelector('.login-password-toggle');

            if (passwordToggle) {
                passwordToggle.addEventListener('click', function () {
                    const icon = this.querySelector('i');
                    const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordField.setAttribute('type', type);

                    // Toggle between solid eye (open) and solid eye-slash (closed)
                    if (type === 'text') {
                        icon.classList.remove('fas', 'fa-eye-slash');
                        icon.classList.add('far', 'fa-eye');
                    } else {
                        icon.classList.remove('far', 'fa-eye');
                        icon.classList.add('fas', 'fa-eye-slash');
                    }
                });
            }
        });
    </script>
}