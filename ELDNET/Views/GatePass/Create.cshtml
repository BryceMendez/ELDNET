@model ELDNET.Models.GatePass

@{
    ViewData["Title"] = "Create Gate Pass";
}

<div class="container py-4 animate__animated animate__fadeIn">
    <div class="custom-card shadow-lg border-0">
        <div class="card-header text-white text-center py-4" style="background: linear-gradient(45deg, #007FFF);">
            <h2 class="mb-2 fw-bold"><i class="bi bi-shield-lock me-2"></i>Create Gate Pass</h2>
            <p class="mb-0 text-white-50">Fill out the form to create a new gate pass.</p>
        </div>
        <div class="card-body p-5">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <h5 class="text-blue-primary mb-4 pb-2 border-bottom border-blue-primary-subtle">
                    <i class="bi bi-person-circle me-2"></i>General Information
                </h5>
                <div class="row g-4 mb-5">
                    <div class="col-md-6">
                        <label asp-for="SchoolYear" class="form-label fw-semibold"></label>
                        <input asp-for="SchoolYear" class="form-control" placeholder="e.g. 2025-2026" />
                        <span asp-validation-for="SchoolYear" class="text-danger mt-1 d-block"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label fw-semibold"></label>
                        <input asp-for="Name" class="form-control" placeholder="Full Name" />
                        <span asp-validation-for="Name" class="text-danger mt-1 d-block"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Address" class="form-label fw-semibold"></label>
                        <input asp-for="Address" class="form-control" placeholder="Complete Address" />
                        <span asp-validation-for="Address" class="text-danger mt-1 d-block"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Date" class="form-label fw-semibold"></label>
                        <input asp-for="Date" type="date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger mt-1 d-block"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Role" class="form-label fw-semibold">Role</label>
                        <div class="d-flex gap-4">
                            <div class="form-check form-check-inline">
                                <input type="radio" asp-for="Role" value="Faculty" class="form-check-input" />
                                <label class="form-check-label">Faculty</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input type="radio" asp-for="Role" value="Non-Teaching Staff" class="form-check-input" />
                                <label class="form-check-label">Non-Teaching Staff</label>
                            </div>
                        </div>
                        <span asp-validation-for="Role" class="text-danger mt-1 d-block"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Department" class="form-label fw-semibold"></label>
                        <input asp-for="Department" class="form-control" placeholder="Department" />
                        <span asp-validation-for="Department" class="text-danger mt-1 d-block"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="CourseYear" class="form-label fw-semibold"></label>
                        <input asp-for="CourseYear" class="form-control" placeholder="Course & Year" />
                        <span asp-validation-for="CourseYear" class="text-danger mt-1 d-block"></span>
                    </div>
                </div>

                <h5 class="text-blue-secondary mb-4 pb-2 border-bottom border-blue-secondary-subtle">
                    <i class="bi bi-car me-2"></i>Vehicle Information
                </h5>
                <div class="row g-4 mb-5">
                    <div class="col-md-4">
                        <label asp-for="PlateNumber" class="form-label fw-semibold"></label>
                        <input asp-for="PlateNumber" class="form-control" placeholder="Plate Number" />
                        <span asp-validation-for="PlateNumber" class="text-danger mt-1 d-block"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Maker" class="form-label fw-semibold"></label>
                        <input asp-for="Maker" class="form-control" placeholder="Toyota, Honda, etc." />
                        <span asp-validation-for="Maker" class="text-danger mt-1 d-block"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Color" class="form-label fw-semibold"></label>
                        <input asp-for="Color" class="form-control" placeholder="Color" />
                        <span asp-validation-for="Color" class="text-danger mt-1 d-block"></span>
                    </div>
                </div>

                <h5 class="text-blue-tertiary mb-4 pb-2 border-bottom border-blue-tertiary-subtle">
                    <i class="bi bi-file-earmark-text me-2"></i>Required Documents
                </h5>
                <div class="row g-4 mb-5">
                    <div class="col-md-6">
                        <label asp-for="StudyLoadFile" class="form-label fw-semibold">Upload Study Load</label>
                        <input asp-for="StudyLoadFile" type="file" class="form-control" />
                        <span asp-validation-for="StudyLoadFile" class="text-danger mt-1 d-block"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="RegistrationFile" class="form-label fw-semibold">Upload Registration Form</label>
                        <input asp-for="RegistrationFile" type="file" class="form-control" />
                        <span asp-validation-for="RegistrationFile" class="text-danger mt-1 d-block"></span>
                    </div>
                </div>

                <div class="col-12 text-center pt-4 border-top">
                    <button type="submit" class="btn-gradient btn-lg me-3 animate__animated animate__pulse animate__infinite" style="min-width: 150px; background: linear-gradient(45deg, #007FFF);">
                        <i class="bi bi-check-circle me-2"></i>Submit
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg" style="min-width: 150px;">
                        <i class="bi bi-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>