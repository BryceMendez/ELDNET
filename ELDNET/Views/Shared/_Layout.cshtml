@using Microsoft.AspNetCore.Http
@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ELDNET</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ELDNET.styles.css" asp-append-version="true" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body class="bg-light d-flex flex-column min-vh-100">

    <!-- Navbar (hidden only if ViewData["HideNav"] is true) -->
    @if (!(ViewData["HideNav"] as bool? ?? false))
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm py-2" style="font-size: 0.9rem;">
                <div class="container-fluid">
                    <a class="navbar-brand fw-bold text-white d-flex align-items-center"
                       asp-area="" asp-controller="AdminHome" asp-action="Index"
                       style="font-size: 1.2rem; padding-left: 0.8rem;">
                        <i class="bi bi-building me-3" style="font-size: 1.5rem;"></i>
                        ELDNET
                    </a>

                    <!-- Toggler (mobile menu) -->
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarNav" aria-controls="navbarNav"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!-- Nav Links -->
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            @if (Context.Session.GetString("UserRole") == "Admin")
                            {
                                <!-- Admin Navigation -->
                                <li class="nav-item me-4">
                                    <a class="nav-link text-white px-2" asp-controller="AdminHome" asp-action="Index">
                                        <i class="bi bi-house-door" style="font-size: 0.8rem;"></i> Home
                                    </a>
                                </li>
                                <li class="nav-item me-4">
                                    <a class="nav-link text-white px-2" asp-controller="StudentAccounts" asp-action="Index">
                                        <i class="bi bi-people" style="font-size: 0.8rem;"></i> Student Accounts
                                    </a>
                                </li>
                                <li class="nav-item me-4">
                                    <a class="nav-link text-white px-2" asp-controller="FacultyAccounts" asp-action="Index">
                                        <i class="bi bi-person-badge" style="font-size: 0.8rem;"></i> Faculty Accounts
                                    </a>
                                </li>
                                <li class="nav-item me-4">
                                    <a class="nav-link text-white px-2" asp-controller="Approval" asp-action="Index">
                                        <i class="bi bi-check-circle" style="font-size: 0.8rem;"></i> Approval
                                    </a>
                                </li>
                            }
                            else if (Context.Session.GetString("UserRole") == "Student")
                            {
                                <!-- Student Navigation -->
                                <li class="nav-item me-4">
                                    <a class="nav-link text-white px-2" asp-controller="Home" asp-action="Index">
                                        <i class="bi bi-house-door" style="font-size: 0.8rem;"></i> Home
                                    </a>
                                </li>
                                <li class="nav-item me-4">
                                    <a class="nav-link text-white px-2" asp-controller="GatePass" asp-action="Index">
                                        <i class="bi bi-door-open" style="font-size: 0.8rem;"></i> Gate Pass
                                    </a>
                                </li>
                                <li class="nav-item me-4">
                                    <a class="nav-link text-white px-2" asp-controller="ReservationRoom" asp-action="Index">
                                        <i class="bi bi-calendar-event" style="font-size: 0.8rem;"></i> Reservation Room
                                    </a>
                                </li>
                                <li class="nav-item me-4">
                                    <a class="nav-link text-white px-2" asp-controller="LockerRequest" asp-action="Index">
                                        <i class="bi bi-lock" style="font-size: 0.8rem;"></i> Locker Request
                                    </a>
                                </li>

                                <!-- Show Student Full Name -->
                                @if (Context.Session.GetString("FullName") != null)
                                {
                                    <li class="nav-item me-4">
                                        <span class="nav-link text-white px-2">
                                            <i class="bi bi-person-circle" style="font-size: 0.8rem;"></i> @Context.Session.GetString("FullName")
                                        </span>
                                    </li>
                                }
                            }

                            else if (Context.Session.GetString("UserRole") == "Faculty")
                            {
                                <!-- Student Navigation -->
                                <li class="nav-item me-4">
                                    <a class="nav-link text-white px-2" asp-controller="Home" asp-action="Index">
                                        <i class="bi bi-house-door" style="font-size: 0.8rem;"></i> Home
                                    </a>
                                </li>
                                <li class="nav-item me-4">
                                    <a class="nav-link text-white px-2" asp-controller="GatePass" asp-action="Index">
                                        <i class="bi bi-door-open" style="font-size: 0.8rem;"></i> Gate Pass
                                    </a>
                                </li>
                                <li class="nav-item me-4">
                                    <a class="nav-link text-white px-2" asp-controller="ReservationRoom" asp-action="Index">
                                        <i class="bi bi-calendar-event" style="font-size: 0.8rem;"></i> Reservation Room
                                    </a>
                                </li>
                                <li class="nav-item me-4">
                                    <a class="nav-link text-white px-2" asp-controller="LockerRequest" asp-action="Index">
                                        <i class="bi bi-lock" style="font-size: 0.8rem;"></i> Locker Request
                                    </a>
                                </li>

                                <!-- Show Student Full Name -->
                                @if (Context.Session.GetString("FullName") != null)
                                {
                                    <li class="nav-item me-4">
                                        <span class="nav-link text-white px-2">
                                            <i class="bi bi-person-circle" style="font-size: 0.8rem;"></i> @Context.Session.GetString("FullName")
                                        </span>
                                    </li>
                                }
                            }

                            <!-- Show Logout if logged in -->
                            @if (Context.Session.GetString("UserId") != null)
                            {
                                <li class="nav-item">
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-light ms-3">
                                            <i class="bi bi-box-arrow-right"></i> Logout
                                        </button>
                                    </form>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }

    <!-- Main Content -->
    @if (ViewData["FullScreen"] as bool? ?? false)
    {
        <!-- No container for full screen pages (like Login) -->
        <div class="flex-grow-1">
            @RenderBody()
        </div>
    }
    else
    {
        <div class="container my-4 flex-grow-1">
            <main role="main" class="pb-4">
                @RenderBody()
            </main>
        </div>
    }

    <!-- Footer (hidden only if ViewData["HideFooter"] is true) -->
    @if (!(ViewData["HideFooter"] as bool? ?? false))
    {
        <footer class="text-dark text-center py-3 mt-auto" style="background-color: rgba(211, 211, 211, 0.7);">
            <div class="container">
                <small>&copy; @DateTime.Now.Year - ELDNET | All Rights Reserved</small>
            </div>
        </footer>
    }

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        // If the page is shown from cache after logout, reload it
        window.addEventListener("pageshow", function (event) {
            if (event.persisted || performance.getEntriesByType("navigation")[0].type === "back_forward") {
                window.location.reload();
            }
        });
    </script>

</body>
</html>