@model ELDNET.Controllers.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<!-- Header -->
<div class="text-center mb-4" style="margin-top: 25px;">
    <h2 class="fw-bold text-primary" style="font-size: 3rem;">
        <i class="bi bi-speedometer2 me-3"></i> Admin Dashboard
    </h2>
    <p class="text-muted mt-2 mb-0" style="font-size: 1.1rem;">
        Overview of key metrics and quick access to management tools.
    </p>
</div>

<!-- Request Summaries -->
<section class="mb-5 mt-2">
    <h3 class="fw-bold text-secondary mb-4 text-start" style="margin-top: -10px;">
        <i class="fas fa-clock me-2 text-primary"></i> Manage Requests
    </h3>

    <div class="row g-4 text-center">

        <!-- Gatepass -->
        <div class="col-lg-4 col-md-6">
            <div class="card admindash-gatepass-card shadow-lg border-0 h-100">
                @if (Model.PendingGatePasses > 0)
                {
                    <div class="position-absolute top-0 end-0 m-3 badge bg-danger">
                        @Model.PendingGatePasses New
                    </div>
                }
                <div class="card-body p-4">
                    <h1 class="admindash-card-number">@Model.TotalGatePasses</h1>
                    <div class="admindash-card-header">
                        <i class="fas fa-door-open admindash-card-icon admindash-gatepass-icon"></i>
                        <h5 class="admindash-card-title">Total Gate Passes</h5>
                    </div>
                    <a href="@Url.Action("Index", "Approval", new { tab = "gatepass" })"
                       class="btn admindash-gatepass-btn mt-2">
                        <i class="fas fa-edit me-1"></i> Manage GatePasses
                    </a>
                </div>
            </div>
        </div>

        <!-- Room Reservation -->
        <div class="col-lg-4 col-md-6">
            <div class="card admindash-reservation-card shadow-lg border-0 h-100">
                @if (Model.PendingRoomReservations > 0)
                {
                    <div class="position-absolute top-0 end-0 m-3 badge bg-danger">
                        @Model.PendingRoomReservations New
                    </div>
                }
                <div class="card-body p-4">
                    <h1 class="admindash-card-number">@Model.TotalRoomReservations</h1>
                    <div class="admindash-card-header">
                        <i class="fas fa-door-closed admindash-card-icon admindash-reservation-icon"></i>
                        <h5 class="admindash-card-title">Total Room Reservations</h5>
                    </div>
                    <a href="@Url.Action("Index", "Approval", new { tab = "reservation" })"
                       class="btn admindash-reservation-btn mt-2">
                        <i class="fas fa-edit me-1"></i> Manage Room Reservations
                    </a>
                </div>
            </div>
        </div>

        <!-- Locker Request -->
        <div class="col-lg-4 col-md-6">
            <div class="card admindash-locker-card shadow-lg border-0 h-100">
                @if (Model.PendingLockerRequests > 0)
                {
                    <div class="position-absolute top-0 end-0 m-3 badge bg-danger">
                        @Model.PendingLockerRequests New
                    </div>
                }
                <div class="card-body p-4">
                    <h1 class="admindash-card-number">@Model.TotalLockerRequests</h1>
                    <div class="admindash-card-header">
                        <i class="fas fa-lock admindash-card-icon admindash-locker-icon"></i>
                        <h5 class="admindash-card-title">Total Locker Requests</h5>
                    </div>
                    <a href="@Url.Action("Index", "Approval", new { tab = "locker" })"
                       class="btn admindash-locker-btn mt-2">
                        <i class="fas fa-edit me-1"></i> Manage Locker Requests
                    </a>
                </div>
            </div>
        </div>

    </div>
</section>

<!-- Accounts Summary -->
<section>
    <h3 class="fw-bold text-secondary mb-4 text-start">
        <i class="fas fa-users me-2 text-primary"></i> Manage Accounts
    </h3>

    <div class="row g-4 text-center">

        <!-- Students -->
        <div class="col-lg-6 col-md-12">
            <div class="card admindash-account-card shadow-lg border-0 h-100">
                <div class="card-body p-4">
                    <h1 class="admindash-account-number">@Model.TotalStudents</h1>
                    <div class="admindash-account-header">
                        <i class="fas fa-user-graduate admindash-account-icon admindash-students-icon"></i>
                        <h5 class="admindash-account-title">Total Students</h5>
                    </div>
                    <a href="@Url.Action("Index", "StudentAccounts")"
                       class="btn admindash-students-btn mt-3">
                        <i class="fas fa-eye me-1"></i> Manage Students
                    </a>
                </div>
            </div>
        </div>

        <!-- Faculty -->
        <div class="col-lg-6 col-md-12">
            <div class="card admindash-faculty-card shadow-lg border-0 h-100">
                <div class="card-body p-4">
                    <h1 class="admindash-account-number">@Model.TotalFaculty</h1>
                    <div class="admindash-account-header">
                        <i class="fas fa-chalkboard-teacher admindash-account-icon admindash-faculty-icon"></i>
                        <h5 class="admindash-account-title">Total Faculty</h5>
                    </div>
                    <a href="@Url.Action("Index", "FacultyAccounts")"
                       class="btn admindash-faculty-btn mt-3">
                        <i class="fas fa-eye me-1"></i> Manage Faculty
                    </a>
                </div>
            </div>
        </div>

    </div>
</section>