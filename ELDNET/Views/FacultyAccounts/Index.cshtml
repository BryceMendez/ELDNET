@model IEnumerable<ELDNET.Models.FacultyAccount>

@{
    ViewData["Title"] = "Faculty Accounts";
}

<div class="page-wrapper bg-white">

    <!-- Page Header -->
    <div class="text-center mb-3 mt-4">
        <h2 class="display-6 fw-bold text-gradient-blue">
            <i class="bi bi-person-badge-fill me-3"></i> Faculty Accounts
        </h2>
        <p class="lead text-muted mt-2">
            Manage and monitor all registered faculty members.
        </p>
    </div>

    <!-- Success Message -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 rounded-5 shadow-sm mb-4 px-4 py-3" role="alert" style="border-radius: 30px;">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Faculty Accounts Table Box (Very Round Corners) -->
    <div class="card border-0 shadow-lg overflow-hidden mt-n2 rounded-5" style="border-radius: 20px;">
        <!-- Card Header -->
        <div class="card-header bg-white text-dark border-0 py-3 px-4 d-flex justify-content-between align-items-center rounded-top-5"
             style="border-top-left-radius: 30px; border-top-right-radius: 30px;">
            <h5 class="mb-0 fw-semibold text-dark">
                <i class="bi bi-people-fill me-2"></i> Registered Faculty
            </h5>
            <span class="fw-semibold fs-6 text-dark">
                Total Faculty: @(Model?.Count() ?? 0)
            </span>
        </div>

        <!-- Card Body -->
        <div class="card-body pt-0 px-4 pb-4 rounded-bottom-5"
             style="border-bottom-left-radius: 30px; border-bottom-right-radius: 30px;">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light border-bottom">
                        <tr>
                            <th class="ps-4 text-secondary text-uppercase small">#</th>
                            <th class="text-secondary text-uppercase small">Faculty ID</th>
                            <th class="text-secondary text-uppercase small">Full Name</th>
                            <th class="text-secondary text-uppercase small">Email</th>
                            <th class="text-center text-secondary text-uppercase small">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int counter = 1;
                            foreach (var faculty in Model)
                            {
                                <tr>
                                    <td class="ps-4 text-muted">@counter</td>
                                    <td>
                                        <span class="badge bg-light text-primary fw-semibold px-3 py-2 rounded-pill border border-primary">
                                            @faculty.FacultyId
                                        </span>
                                    </td>
                                    <td class="fw-semibold text-dark">@faculty.FullName</td>
                                    <td class="text-muted">@faculty.Email</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <!-- View Button -->
                                            <a asp-action="Details" asp-route-id="@faculty.Id"
                                               class="btn btn-primary rounded-pill px-3 me-2 shadow-sm">
                                                <i class="bi bi-eye-fill me-1"></i> View
                                            </a>

                                            <!-- Delete Button -->
                                            <button type="button"
                                                    class="btn btn-danger rounded-pill px-3 shadow-sm"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#deleteModal@(faculty.Id)">
                                                <i class="bi bi-trash3-fill me-1"></i> Delete
                                            </button>
                                        </div>

                                        <!-- Delete Confirmation Modal -->
                                        <div class="modal fade" id="deleteModal@(faculty.Id)" tabindex="-1"
                                             aria-labelledby="deleteModalLabel@(faculty.Id)" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content border-0 rounded-5 shadow-lg" style="border-radius: 30px;">
                                                    <!-- Modal Header -->
                                                    <div class="modal-header bg-gradient-danger border-0 rounded-top-5"
                                                         style="border-top-left-radius: 30px; border-top-right-radius: 30px;">
                                                        <h5 class="modal-title fw-semibold text-white" id="deleteModalLabel@(faculty.Id)">
                                                            <i class="bi bi-exclamation-triangle-fill me-2"></i> Confirm Deletion
                                                        </h5>
                                                        <button type="button" class="btn-close btn-close-white"
                                                                data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>

                                                    <!-- Modal Body -->
                                                    <div class="modal-body p-4">
                                                        <p class="mb-3">Are you sure you want to delete this faculty member?</p>
                                                        <h6 class="fw-bold text-danger">
                                                            @faculty.FullName
                                                            <span class="text-muted">(ID: @faculty.FacultyId)</span>
                                                        </h6>
                                                        <p class="text-muted small mt-3 mb-0">This action cannot be undone.</p>
                                                    </div>

                                                    <!-- Modal Footer -->
                                                    <div class="modal-footer border-top-0 pt-0 justify-content-center">
                                                        <button type="button" class="btn btn-outline-secondary rounded-pill px-4"
                                                                data-bs-dismiss="modal">
                                                            Cancel
                                                        </button>
                                                        <form asp-action="Delete" asp-route-id="@faculty.Id" method="post" class="d-inline">
                                                            <button type="submit" class="btn btn-danger rounded-pill px-4">Delete</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                counter++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="bi bi-emoji-frown display-6 d-block mb-2"></i>
                                    <h5 class="fw-semibold mb-1">No Faculty Accounts Found</h5>
                                    <p class="small mb-0">There are currently no registered faculty members.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
