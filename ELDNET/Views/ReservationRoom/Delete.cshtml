@model ELDNET.Models.ReservationRoom

@{
    ViewData["Title"] = "Delete Reservation Room";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-success text-white py-3">
        <h4 class="mb-0">Delete Reservation</h4>
        <p class="mb-0">Are you sure you want to delete this reservation?</p>
    </div>
    <div class="card-body p-4">
        <h5 class="mb-3 text-danger">Confirm Deletion</h5>
        <div class="alert alert-warning" role="alert">
            Deleting this reservation is irreversible. Please confirm.
        </div>

        <div class="row">
            <div class="col-md-6">
                <h5 class="mb-3 text-primary">General Information</h5>
                <dl class="row">
                    <dt class="col-sm-4">Organization Name</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.OrganizationName)</dd>

                    <dt class="col-sm-4">Activity Title</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ActivityTitle)</dd>

                    <dt class="col-sm-4">Activity Date</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ActivityDate)</dd>

                    <dt class="col-sm-4">Speaker</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Speaker)</dd>

                    <dt class="col-sm-4">Venue</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Venue)</dd>

                    <dt class="col-sm-4">Purpose/Objective</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.PurposeObjective)</dd>

                    <dt class="col-sm-4">Date</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Date)</dd>
                </dl>
            </div>

            <div class="col-md-6">
                <h5 class="mb-3 text-warning">Reservation Specifics</h5>
                <dl class="row">
                    <dt class="col-sm-4">Date Needed</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DateNeeded)</dd>

                    <dt class="col-sm-4">Time From</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.TimeFrom)</dd>

                    <dt class="col-sm-4">Time To</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.TimeTo)</dd>

                    <dt class="col-sm-4">Participants</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Participants)</dd>

                    <dt class="col-sm-4">Equipment/Facilities</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.EquipmentFacilities)</dd>

                    <dt class="col-sm-4">Nature of Activity</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.NatureOfActivity)</dd>

                    <dt class="col-sm-4">Source of Funds</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.SourceOfFunds)</dd>

                    <dt class="col-sm-4">Room Number</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.RoomNumber)</dd>

                    <dt class="col-sm-4">Reserved By</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ReservedBy)</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-end mt-4">
                <button type="submit" class="btn btn-danger me-2">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

<style>
    .card {
        border-radius: 8px;
        overflow: hidden;
    }

    .card-header {
        border-bottom: 1px solid #dee2e6;
    }

    dl.row dt {
        font-weight: 600;
        color: #555;
    }
</style>