@model ELDNET.Models.FacultyAccount
@{
    ViewData["Title"] = "Faculty Profile";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<link rel="stylesheet" href="~/css/FacultyAccounts/Details.css" />

<div class="page-wrapper animate__animated animate__fadeIn">
    <div class="top-nav">
        <a asp-action="Index" class="btn-back">
            <i class="bi bi-arrow-left-circle-fill fs-5"></i>
            Back to Faculty Directory
        </a>
        <div class="text-muted fw-medium small">
            <i class="bi bi-clock-history me-1"></i>
            Account Status: <span class="text-success">Verified</span>
        </div>
    </div>

    <header class="profile-hero">
        <div class="hero-avatar-wrapper">
            <img src="@(string.IsNullOrEmpty(Model.ProfilePictureUrl) ? "/images/defaultprofile.jpg" : Model.ProfilePictureUrl)"
                 class="hero-avatar" alt="Faculty Photo">
        </div>

        <div class="hero-info">
            <h1>@(string.IsNullOrWhiteSpace(Model.FullName) ? "Faculty Name Not Set" : Model.FullName)</h1>
            <p class="text-muted mb-0 fw-medium">
                <i class="bi bi-briefcase-fill text-primary me-2"></i>
                @if (string.IsNullOrWhiteSpace(Model.Course))
                {
                    <span class="text-not-set">Department not set</span>
                }
                else
                {
                    <span>@Model.Course Faculty</span>
                }
            </p>
            <div class="mt-3 d-flex gap-2">
                <span class="badge-soft badge-faculty">ID: @(string.IsNullOrWhiteSpace(Model.FacultyId) ? "N/A" : Model.FacultyId)</span>
                <span class="badge-soft bg-light text-dark border">Academic Year 2024-2025</span>
            </div>
        </div>
    </header>

    <div class="info-grid">
        <div class="content-card">
            <h5 class="card-title">
                <i class="bi bi-person-badge-fill"></i>
                Professional Credentials
            </h5>

            <div class="detail-item">
                <div class="detail-label">Faculty ID</div>
                <div class="detail-value text-primary">
                    @if (string.IsNullOrWhiteSpace(Model.FacultyId))
                    {
                        <span class="text-not-set">not set</span>
                    }
                    else
                    {
                        @Model.FacultyId
                    }
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Official Email</div>
                <div class="detail-value">
                    @if (string.IsNullOrWhiteSpace(Model.Email))
                    {
                        <span class="text-not-set">not set</span>
                    }
                    else
                    {
                        @Model.Email
                    }
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Mobile Number</div>
                <div class="detail-value">
                    @if (string.IsNullOrWhiteSpace(Model.PhoneNumber))
                    {
                        <span class="text-not-set">not set</span>
                    }
                    else
                    {
                        @Model.PhoneNumber
                    }
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Gender</div>
                <div class="detail-value">
                    @if (string.IsNullOrWhiteSpace(Model.Gender))
                    {
                        <span class="text-not-set">not set</span>
                    }
                    else
                    {
                        @Model.Gender
                    }
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Department</div>
                <div class="detail-value">
                    @if (string.IsNullOrWhiteSpace(Model.Course))
                    {
                        <span class="text-not-set">not set</span>
                    }
                    else
                    {
                        @Model.Course
                    }
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Handling Section</div>
                <div class="detail-value">
                    @if (string.IsNullOrWhiteSpace(Model.Section))
                    {
                        <span class="text-not-set">not set</span>
                    }
                    else
                    {
                        @Model.Section
                    }
                </div>
            </div>
        </div>

        <div class="sidebar-col">
            <div class="stat-widget">
                <div class="small opacity-75 mb-1">System User UID</div>
                <div class="h3 fw-bold mb-3"><span class="id-tag">#@Model.Id</span></div>
                <div class="d-flex align-items-center gap-2 small">
                    <i class="bi bi-shield-check-fill"></i>
                    <span>Faculty Role Verified</span>
                </div>
            </div>

            <div class="content-card admin-note-card">
                <h5 class="card-title" style="font-size: 1rem;">
                    <i class="bi bi-info-circle-fill"></i>
                    HR Administration Note
                </h5>
                <p class="small text-muted mb-0 leading-relaxed">
                    This faculty profile is synced with the Human Resources Information System (HRIS).
                    Updates to employment status or department must be requested through the Dean's office.
                </p>
                <hr class="my-4" style="opacity: 0.08;">
                <button class="btn btn-sm btn-light w-100 fw-bold py-2 border">
                    <i class="bi bi-printer-fill me-2"></i> Print Record
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    document.querySelectorAll('.detail-item').forEach((item, index) => {
        item.style.animation = `fadeInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards ${index * 0.08}s`;
        item.style.opacity = '0';
    });

    const styleSheet = document.createElement('style');
    styleSheet.innerHTML = `
        @@keyframes fadeInUp {
            from { opacity: 0; transform: translateY(15px); }
            to { opacity: 1; transform: translateY(0); }
        }
    `;
    document.head.appendChild(styleSheet);
</script>