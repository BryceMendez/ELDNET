@model ELDNET.Models.ReservationRoom

@{
    ViewData["Title"] = "Activity Reservation Details";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/reservationdetails.css" rel="stylesheet" /> @* Link to the new CSS file *@
</head>

<div class="container py-3 animate__animated animate__fadeIn">
    @* Adjusted padding-top/bottom *@
    <div class="reservation-modern-card">
        <div class="card-header-modern-reservation-compact">
            @* Changed class for compact header *@
            <h2 class="mb-1"><i class="bi bi-calendar-check me-3"></i>Activity Reservation Details</h2> @* Adjusted margin *@
            <p class="text-white-75 mb-0">Comprehensive information for this activity room reservation.</p> @* Adjusted margin *@
        </div>

        <div class="card-body p-lg-5 p-4">
            <div class="row g-5">

                <!-- Activity Information Section -->
                <div class="col-lg-6">
                    <h5 class="reservation-detail-section-title">
                        <i class="bi bi-info-circle"></i>Activity Information
                    </h5>
                    <dl class="row reservation-detail-list-modern-improved">
                        @* Changed class for improved list *@
                        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.OrganizationName)</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.OrganizationName)</dd>

                        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.ActivityTitle)</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.ActivityTitle)</dd>

                        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.ActivityDate)</dt>
                        <dd class="col-sm-7">@Model.ActivityDate.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Speaker)</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.Speaker)</dd>

                        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Venue)</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.Venue)</dd>

                        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.NatureOfActivity)</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.NatureOfActivity)</dd>

                        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.PurposeObjective)</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.PurposeObjective)</dd>
                    </dl>
                </div>

                <!-- Reservation Details Section -->
                <div class="col-lg-6 divider-line">
                    <h5 class="reservation-detail-section-title">
                        <i class="bi bi-clock"></i>Reservation Details
                    </h5>
                    <dl class="row reservation-detail-list-modern-improved">
                        @* Changed class for improved list *@
                        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.DateNeeded)</dt>
                        <dd class="col-sm-7">@Model.DateNeeded.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.TimeFrom)</dt>
                        <dd class="col-sm-7">@Model.TimeFrom.ToString(@"hh\:mm")</dd>

                        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.TimeTo)</dt>
                        <dd class="col-sm-7">@Model.TimeTo.ToString(@"hh\:mm")</dd>

                        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.RoomNumber)</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.RoomNumber)</dd>

                        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Participants)</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.Participants)</dd>

                        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.EquipmentFacilities)</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.EquipmentFacilities)</dd>
                    </dl>

                    <h5 class="reservation-detail-section-title mt-5">
                        <i class="bi bi-person-badge"></i>Requester Info
                    </h5>
                    <dl class="row reservation-detail-list-modern-improved">
                        @* Changed class for improved list *@
                        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.ReservedBy)</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.ReservedBy)</dd>

                        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.SourceOfFunds)</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.SourceOfFunds)</dd>

                        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Date)</dt>
                        <dd class="col-sm-7">@Model.Date.ToString("MMMM dd, yyyy")</dd>
                    </dl>
                </div>
            </div>

            <!-- Approval Workflow Section -->
            <div class="mt-5 pt-5 border-top text-center">
                <h4 class="reservation-detail-section-title justify-content-center mb-5">
                    <i class="bi bi-diagram-3"></i>Approval Workflow
                </h4>

                <div class="row justify-content-center g-4">
                    <!-- Approver Loop - Refined Card Format -->
                    @foreach (var approver in new[]
                                        {
                                        new { Name = Model.Approver1Name, Status = Model.Approver1Status, Number = 1 },
                                        new { Name = Model.Approver2Name, Status = Model.Approver2Status, Number = 2 },
                                        new { Name = Model.Approver3Name, Status = Model.Approver3Status, Number = 3 },
                                        new { Name = Model.Approver4Name, Status = Model.Approver4Status, Number = 4 },
                                        new { Name = Model.Approver5Name, Status = Model.Approver5Status, Number = 5 }
                                        })
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card reservation-approver-card-new h-100 shadow-sm border-0">
                                @* Changed class for new card style, added shadow/border *@
                                <div class="card-body d-flex flex-column align-items-center p-4">
                                    @* Added flex for centering *@
                                    <div class="reservation-approver-status-icon mb-2">
                                        @* Icon on top *@
                                        @if (approver.Status == "Pending")
                                        {
                                            <i class="bi bi-hourglass-split text-warning"></i>
                                        }
                                        else if (approver.Status == "Approved")
                                        {
                                            <i class="bi bi-check-circle-fill text-success"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-x-circle-fill text-danger"></i>
                                        }
                                    </div>
                                    <div class="reservation-approver-status-label mb-3">
                                        @* Label below icon *@
                                        @if (approver.Status == "Pending")
                                        {
                                            <span class="badge badge-modern reservation-badge-pending">Pending</span>
                                        }
                                        else if (approver.Status == "Approved")
                                        {
                                            <span class="badge badge-modern reservation-badge-approved">Approved</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-modern reservation-badge-denied">Denied</span>
                                        }
                                    </div>
                                    <h5 class="mb-1 reservation-approver-name">
                                        @* Adjusted margin-bottom here *@
                                        @if (!string.IsNullOrEmpty(approver.Name))
                                        {
                                            @approver.Name
                                        }
                                        else
                                        {
                                            <span>Approver @approver.Number</span>
                                        }
                                    </h5>
                                    <hr class="reservation-approver-divider" /> @* Visible Separator Line *@
                                    <form id="approverForm_@approver.Number" asp-controller="Approval" asp-action="SetApproval" method="post" class="mt-2 reservation-approver-buttons-form">
                                        @* Adjusted margin-top here, added class and id *@
                                        <input type="hidden" name="id" value="@Model.Id" />
                                        <input type="hidden" name="type" value="Reservation" />
                                        <input type="hidden" name="approver" value="@approver.Number" />

                                        <div class="d-flex justify-content-center w-100">
                                            @* Added this div for inline buttons *@
                                            <button type="button" onclick="event.preventDefault(); submitApproverForm(@approver.Number, 'Approved');" class="btn btn-success me-2 reservation-approver-btn">Approve</button> @* Changed to type="button" and added JS *@
                                            <button type="button" onclick="event.preventDefault(); submitApproverForm(@approver.Number, 'Denied');" class="btn btn-danger reservation-approver-btn">Deny</button> @* Changed to type="button" and added JS *@
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Final Confirmation Section - Redesigned -->
                <div class="mt-5 pt-4 border-top text-center">
                    <p class="reservation-final-status-text mb-4">Final Status: <strong class="reservation-final-status-@(Model.FinalStatus?.ToLower())">@Model.FinalStatus</strong></p> @* Final Status on top *@
                    <div class="d-flex justify-content-center gap-3">
                        @* Buttons side-by-side with gap *@
                        <form asp-controller="Approval" asp-action="ConfirmApproval" method="post" class="m-0">
                            @* Remove form margin *@
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="type" value="Reservation" />
                            <button type="submit" class="btn btn-primary btn-lg reservation-btn-final-action">
                                @* Added btn-final-action class *@
                                <i class="bi bi-check2-circle me-2"></i>Confirm Final Decision
                            </button>
                        </form>
                        <a asp-action="Index" class="btn btn-secondary btn-lg reservation-btn-gray-modern reservation-btn-final-action">
                            @* Added btn-final-action class *@
                            <i class="bi bi-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    async function submitApproverForm(approverNumber, decision) {
        const form = document.getElementById(`approverForm_${approverNumber}`);
        const formData = new FormData(form);
        formData.append('decision', decision); // Add the decision to form data

        try {
            const response = await fetch(form.action, {
                method: form.method,
                body: formData
            });

            if (response.ok) {
                // If the submission is successful, reload the page to show updated status
                window.location.reload();
            } else {
                console.error('Form submission failed:', response.statusText);
                alert('An error occurred during approval. Please try again.');
            }
        } catch (error) {
            console.error('Error submitting form:', error);
            alert('An unexpected error occurred. Please check your network connection and try again.');
        }
    }
</script>