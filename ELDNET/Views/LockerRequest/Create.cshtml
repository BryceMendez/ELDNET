@model ELDNET.Models.LockerRequest

@{
    ViewData["Title"] = "Create Locker Request";
}

<div class="form-container">
    <div class="custom-card shadow-lg">
        <div class="card-header text-center">
            <h2><i class="bi bi-lock"></i> Create Locker Request</h2>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Full Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="IdNumber" class="form-label"></label>
                        <input asp-for="IdNumber" class="form-control" placeholder="ID Number" />
                        <span asp-validation-for="IdNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="LockerNumber" class="form-label"></label>
                        <input asp-for="LockerNumber" class="form-control" placeholder="Locker Number" />
                        <span asp-validation-for="LockerNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Semester" class="form-label"></label>
                        <input asp-for="Semester" class="form-control" placeholder="Semester (e.g. 1st Sem 2025)" />
                        <span asp-validation-for="Semester" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="ContactNumber" class="form-label"></label>
                    <input asp-for="ContactNumber" class="form-control" placeholder="Contact Number" />
                    <span asp-validation-for="ContactNumber" class="text-danger"></span>
                </div>

                <!-- ✅ File upload for Study Load -->
                <div class="mb-3">
                    <label asp-for="StudyLoadFile" class="form-label">Attach Study Load</label>
                    <input asp-for="StudyLoadFile" type="file" class="form-control" />
                    <span asp-validation-for="StudyLoadFile" class="text-danger"></span>
                </div>

                <!-- ✅ File upload for Registration Form -->
                <div class="mb-3">
                    <label asp-for="RegistrationFile" class="form-label">Attach Registration Form</label>
                    <input asp-for="RegistrationFile" type="file" class="form-control" />
                    <span asp-validation-for="RegistrationFile" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="AcceptTerms" class="form-check-input" type="checkbox" />
                    <label asp-for="AcceptTerms" class="form-check-label">I accept the Terms and Conditions</label>
                    <span asp-validation-for="AcceptTerms" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-gradient px-5">Submit</button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
