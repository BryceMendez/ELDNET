@model IEnumerable<ELDNET.Models.ReservationRoom>

@{
    ViewData["Title"] = "Reservation Room List";
}

<div class="container-fluid p-4 mt-2">

    <div class="card border-0 shadow-sm mb-4" style="border-left: 5px solid #198754 !important; border-radius: 12px;">
        <div class="card-body d-flex align-items-center justify-content-between py-3 px-4">
            <div class="d-flex align-items-center">
                <div class="rounded-circle p-2 me-3" style="background-color: rgba(25, 135, 84, 0.1);">
                    <i class="bi bi-building-fill fs-5 text-success"></i>
                </div>
                <div>
                    <h6 class="text-muted fw-bold mb-0 text-uppercase small">Campus Map</h6>
                    <h5 class="fw-bold mb-0 text-dark">View rooms that you may reserve inside the campus</h5>
                </div>
            </div>

            <button type="button" class="btn btn-success rounded-pill px-4 py-2 shadow-sm fw-bold border-0"
                    data-bs-toggle="modal" data-bs-target="#roomAvailabilityModal">
                <i class="bi bi-door-closed-fill me-2"></i> View Rooms
            </button>
        </div>
    </div>

    <div class="row align-items-center mb-4">
        <div class="col-md-6">
            <h2 class="fw-bold text-success">
                <i class="bi bi-calendar-check-fill me-2"></i>Reservation Room List
            </h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="ReservationRoom" asp-action="Create" class="btn btn-success text-white rounded-pill px-4 py-2 shadow-sm">
                <i class="bi bi-plus-circle me-2"></i> Create New Reservation
            </a>
        </div>
    </div>

    @if (TempData["success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm border-0 border-start border-4 border-success bg-white" role="alert">
            <i class="bi bi-check-circle-fill me-2 text-success"></i>
            <span class="text-dark">@TempData["success"]</span>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive shadow-sm rounded-3">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-header-custom">
                    <tr>
                        <th class="ps-4">Status</th>
                        <th>Organization</th>
                        <th>Activity Title</th>
                        <th>Speaker</th>
                        <th>Date Filed</th>
                        <th>Date Needed</th>
                        <th>Time</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        string statusBadgeClass = item.Status switch
                        {
                            "Approved" => "badge-modern badge-approved",
                            "Denied" => "badge-modern badge-denied",
                            "Pending" => "badge-modern badge-pending",
                            "Changed" => "badge-modern badge-changed",
                            _ => "badge bg-secondary text-white"
                        };

                        <tr>
                            <td class="ps-4">
                                <span class="@statusBadgeClass px-3 py-2">@item.Status</span>
                            </td>
                            <td class="fw-bold">@item.OrganizationName</td>
                            <td>@item.ActivityTitle</td>
                            <td class="text-muted">@item.Speaker</td>
                            <td class="small">@item.Date.ToString("yyyy-MM-dd")</td>
                            <td class="fw-bold text-success">@item.DateNeeded.ToString("yyyy-MM-dd")</td>
                            <td class="small">
                                @DateTime.Today.Add(item.TimeFrom).ToString("hh:mm tt") -
                                @DateTime.Today.Add(item.TimeTo).ToString("hh:mm tt")
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Edit", new { id = item.Id })"
                                       class="btn btn-sm btn-warning text-white mx-1 shadow-sm restricted-link"
                                       data-status="@item.Status" data-action="Edit">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white mx-1 shadow-sm">
                                        <i class="bi bi-eye-fill"></i> Details
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.Id })"
                                       class="btn btn-sm btn-danger mx-1 shadow-sm restricted-link"
                                       data-status="@item.Status" data-action="Delete">
                                        <i class="bi bi-trash3-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-success text-center shadow-sm py-4 bg-white border-0">
            <i class="bi bi-info-circle fs-2 d-block mb-2 text-success"></i>
            <h5>No Reservation Records Found.</h5>
        </div>
    }
</div>

<div class="modal fade" id="roomAvailabilityModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header text-white" style="background-color: #198754;">
                <h5 class="modal-title fw-bold"><i class="bi bi-building me-2"></i>Campus Room Directory</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body bg-light p-4">

                <div class="alert alert-warning border-0 shadow-sm d-flex align-items-center mb-4" role="alert">
                    <i class="bi bi-exclamation-circle-fill fs-4 me-3"></i>
                    <div>
                        <strong>Important Note:</strong> The approval of your request will be handled by the Admin only.
                    </div>
                </div>

                @for (int floor = 2; floor <= 8; floor++)
                {
                    <div class="mb-4">
                        <h6 class="fw-bold text-success text-uppercase border-bottom pb-2">
                            <i class="bi bi-layers me-2"></i>@floor@((floor == 2) ? "nd" : (floor == 3) ? "rd" : "th") Floor
                        </h6>
                        <div class="room-grid">
                            @for (int roomNum = 1; roomNum <= 18; roomNum++)
                            {
                                string roomCode = $"{floor}{roomNum:D2}";
                                <div class="room-item shadow-sm">
                                    <i class="bi bi-door-closed mb-1"></i>
                                    <span>Room @roomCode</span>
                                </div>
                            }
                        </div>
                    </div>
                }

                <div class="text-center mt-4 p-3 bg-white rounded shadow-sm">
                    <small class="text-muted italic">
                        <i class="bi bi-info-circle me-1"></i>
                        Note: This is not the official list of rooms inside the University of Cebu Banilad Campus; it is provided as an example for the reservation system.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="centerNotification" class="center-notification shadow-lg" style="display:none;">
    <div class="notification-content text-center p-4 rounded bg-white">
        <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 2.5rem;"></i>
        <h5 class="mt-2 fw-bold">Cannot <span id="actionName">Action</span> Reservation</h5>
        <p class="mb-0 text-muted small">This request is already <span class="fw-semibold text-success">Approved</span> and cannot be modified.</p>
        <button id="closeNotification" class="btn btn-outline-success mt-3 px-4 rounded-pill">OK</button>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/ReservationRoom/Index.css" asp-append-version="true" />
}

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const links = document.querySelectorAll(".restricted-link");
            const modal = document.getElementById("centerNotification");
            const actionSpan = document.getElementById("actionName");
            const closeBtn = document.getElementById("closeNotification");

            links.forEach(link => {
                link.addEventListener("click", function (e) {
                    const status = this.getAttribute("data-status");
                    const action = this.getAttribute("data-action");

                    if (status === "Approved") {
                        e.preventDefault();
                        actionSpan.innerText = action;
                        modal.style.display = "block";
                    }
                });
            });

            closeBtn.addEventListener("click", function () {
                modal.style.display = "none";
            });
        });
    </script>
}