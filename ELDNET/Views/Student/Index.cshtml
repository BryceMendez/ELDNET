

@model IEnumerable<ELDNET.Models.Student>
@{
    ViewData["Title"] = "Index";
}
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Student List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Student" asp-action="Create" class="btn btn-primary">+ Create New Student </a>
            </div>
        </div>
        <br /><br />
        @if (Model != null && Model.Any())
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Lastname</th>
                        <th>Firstname</th>
                        <th>Course</th>
                        <th>Email</th>
                        <th>Date</th>
                        <th>Request Type</th>
                        <th>Request Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td width="10%">
                                @obj.Id
                            </td>
                            <td width="10%">
                                @obj.Firstname
                            </td>
                            <td width="10%">
                                @obj.Lastname
                            </td>
                            <td width="10%">
                                @obj.Course
                            </td>
                            <td width="20%">
                                @obj.Email
                            </td>
                            <td width="20%">
                                @obj.DateCreated
                            </td>
                            
                            <td>
                                <div class="w-20 btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@obj.Id">&nbsp;Edit&nbsp; </a>|
                                    <a asp-action="Details" asp-route-id="@obj.Id">&nbsp;Details&nbsp;</a>|
                                    <a asp-action="Delete" asp-route-id="@obj.Id">&nbsp;Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info text-center">
                No Student Records Found.
            </div>
        }
    </div>
