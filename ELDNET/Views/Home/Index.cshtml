@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-4">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-primary">Welcome to ELDNET</h1>
        <p class="text-muted">Quick access to Gate Pass, Reservation Room, and Locker Request services.</p>
    </div>

    <div class="card shadow-xl border-0" style="border-radius: 25px; background: #f8f9fa;">
        <div class="row g-5">

            <div class="col-md-4 mb-5">
                <div class="card shadow-lg border-0 h-100" style="border-radius: 20px; overflow: hidden;">
                    <div class="position-relative">
                        <img src="~/images/gatepass.jpg" class="card-img-top" alt="Gate Pass"
                             style="height: 250px; object-fit: cover;">
                        <div class="overlay"></div>
                        <h4 class="overlay-text text-center">Gate Pass</h4>
                    </div>
                    <div class="card-body text-center p-4">
                        <p class="text-muted">Manage entry passes quickly and securely.</p>
                        <a asp-controller="GatePass" asp-action="Index" class="btn btn-gradient mt-2">Go to Gate Pass</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-5">
                <div class="card shadow-lg border-0 h-100" style="border-radius: 20px; overflow: hidden;">
                    <div class="position-relative">
                        <img src="~/images/reservation.png" class="card-img-top" alt="Reservation Room"
                             style="height: 250px; object-fit: cover;">
                        <div class="overlay overlay-green"></div>
                        <h4 class="overlay-text text-center">Reservation Room</h4>
                    </div>
                    <div class="card-body text-center p-4">
                        <p class="text-muted">Book rooms for events, meetings, and activities.</p>
                        <a asp-controller="ReservationRoom" asp-action="Index" class="btn btn-gradient mt-2">Go to Reservation</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-5">
                <div class="card shadow-lg border-0 h-100" style="border-radius: 20px; overflow: hidden;">
                    <div class="position-relative">
                        <img src="~/images/locker.png" class="card-img-top" alt="Locker Request"
                             style="height: 250px; object-fit: cover;">
                        <div class="overlay overlay-yellow"></div>
                        <h4 class="overlay-text text-center">Locker Request</h4>
                    </div>
                    <div class="card-body text-center p-4">
                        <p class="text-muted">Apply for and manage student locker requests.</p>
                        <a asp-controller="LockerRequest" asp-action="Index" class="btn btn-gradient mt-2">Go to Locker</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>