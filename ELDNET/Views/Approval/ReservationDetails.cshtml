@model ELDNET.Models.ReservationRoom

@{
    ViewData["Title"] = "Activity Reservation Details";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Activity Reservation Details</h3>
        </div>

        <div class="card-body p-4">
            <dl class="row mb-0">
                <dt class="col-sm-4">ID</dt>
                <dd class="col-sm-8">@Model.Id</dd>

                <dt class="col-sm-4">Organization Name</dt>
                <dd class="col-sm-8">@Model.OrganizationName</dd>

                <dt class="col-sm-4">Activity Title</dt>
                <dd class="col-sm-8">@Model.ActivityTitle</dd>

                <dt class="col-sm-4">Activity Date</dt>
                <dd class="col-sm-8">@Model.ActivityDate.ToString("MMMM dd, yyyy")</dd>

                <dt class="col-sm-4">Speaker</dt>
                <dd class="col-sm-8">@Model.Speaker</dd>

                <dt class="col-sm-4">Venue</dt>
                <dd class="col-sm-8">@Model.Venue</dd>

                <dt class="col-sm-4">Purpose / Objective</dt>
                <dd class="col-sm-8">@Model.PurposeObjective</dd>

                <dt class="col-sm-4">Date Needed</dt>
                <dd class="col-sm-8">@Model.DateNeeded?.ToString("MMMM dd, yyyy")</dd>

                <dt class="col-sm-4">Time From</dt>
                <dd class="col-sm-8">@Model.TimeFrom?.ToString(@"hh\:mm")</dd>

                <dt class="col-sm-4">Time To</dt>
                <dd class="col-sm-8">@Model.TimeTo?.ToString(@"hh\:mm")</dd>

                <dt class="col-sm-4">Participants</dt>
                <dd class="col-sm-8">@Model.Participants</dd>

                <dt class="col-sm-4">Equipment / Facilities Needed</dt>
                <dd class="col-sm-8">@Model.EquipmentFacilities</dd>

                <dt class="col-sm-4">Nature of Activity</dt>
                <dd class="col-sm-8">@Model.NatureOfActivity</dd>

                <dt class="col-sm-4">Source of Funds</dt>
                <dd class="col-sm-8">@Model.SourceOfFunds</dd>

                <dt class="col-sm-4">Room Number</dt>
                <dd class="col-sm-8">@Model.RoomNumber</dd>

                <dt class="col-sm-4">Reserved By</dt>
                <dd class="col-sm-8">@Model.ReservedBy</dd>

                <dt class="col-sm-4">Status</dt>
                <dd class="col-sm-8">
                    <span class="badge
                        @(Model.Status == "Approved" ? "bg-success" :
                                                    Model.Status == "Denied" ? "bg-danger" :
                                                    "bg-warning text-dark")">
                        @Model.Status
                    </span>
                </dd>

                <dt class="col-sm-4">Created Date</dt>
                <dd class="col-sm-8">@Model.Date.ToString("MMMM dd, yyyy")</dd>
            </dl>
        </div>

        <div class="card-footer text-end">
            <form asp-action="ApproveReservation" method="post" class="d-inline">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-success">Approve</button>
            </form>
            <form asp-action="DenyReservation" method="post" class="d-inline">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger">Deny</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>
