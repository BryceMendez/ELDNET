@model ELDNET.Models.ReservationRoom

@{
    ViewData["Title"] = "Delete Reservation Room";
}

<div class="container py-4 animate__animated animate__fadeIn">
    <div class="custom-card shadow-lg border-0 confirmation-card">
        <div class="card-header text-white text-center py-4 delete-header">
            <h2 class="mb-2 fw-bold"><i class="bi bi-exclamation-triangle-fill me-2"></i>Delete Room Reservation</h2>
            <p class="mb-0 text-white-75">Review the details below before confirming deletion. This action is irreversible.</p>
        </div>
        <div class="card-body p-5">
            <div class="alert alert-danger fade show mb-5" role="alert">
                <h4 class="alert-heading fw-bold">Warning: Permanent Deletion!</h4>
                <p>You are about to permanently delete this room reservation. Once deleted, all associated data will be lost and cannot be recovered.</p>
                <hr>
                <p class="mb-0 fw-bold">Please confirm your decision carefully.</p>
            </div>

            <div class="row g-5">
                <!-- General Information Section -->
                <div class="col-lg-6 border-end-lg pe-lg-5">
                    <h5 class="text-danger-dark mb-4 pb-2 border-bottom border-danger-subtle">
                        <i class="bi bi-info-circle-fill me-2"></i>General Information
                    </h5>
                    <dl class="row detail-list-modern">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.OrganizationName)</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@Html.DisplayFor(model => model.OrganizationName)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ActivityTitle)</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@Html.DisplayFor(model => model.ActivityTitle)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ActivityDate)</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@Html.DisplayFor(model => model.ActivityDate)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Speaker)</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@Html.DisplayFor(model => model.Speaker)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Venue)</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@Html.DisplayFor(model => model.Venue)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PurposeObjective)</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@Html.DisplayFor(model => model.PurposeObjective)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Date)</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@Html.DisplayFor(model => model.Date)</dd>
                    </dl>
                </div>

                <!-- Reservation Specifics Section -->
                <div class="col-lg-6 ps-lg-5">
                    <h5 class="text-danger-secondary mb-4 pb-2 border-bottom border-danger-subtle">
                        <i class="bi bi-calendar-check-fill me-2"></i>Reservation Specifics
                    </h5>
                    <dl class="row detail-list-modern">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DateNeeded)</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@Html.DisplayFor(model => model.DateNeeded)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TimeFrom)</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@Html.DisplayFor(model => model.TimeFrom)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TimeTo)</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@Html.DisplayFor(model => model.TimeTo)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Participants)</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@Html.DisplayFor(model => model.Participants)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.EquipmentFacilities)</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@Html.DisplayFor(model => model.EquipmentFacilities)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NatureOfActivity)</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@Html.DisplayFor(model => model.NatureOfActivity)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.SourceOfFunds)</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@Html.DisplayFor(model => model.SourceOfFunds)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.RoomNumber)</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@Html.DisplayFor(model => model.RoomNumber)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ReservedBy)</dt>
                        <dd class="col-sm-8 text-dark fw-semibold">@Html.DisplayFor(model => model.ReservedBy)</dd>
                    </dl>
                </div>

                <!-- Action Buttons -->
                <div class="col-12 text-center pt-5 border-top">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn-gradient-danger btn-lg me-3 animate__animated animate__pulse animate__infinite" style="min-width: 150px;">
                            <i class="bi bi-trash-fill me-2"></i>Delete
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg" style="min-width: 150px;">
                            <i class="bi bi-arrow-left me-2"></i>Back to List
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>