@model ELDNET.Models.GatePass

@{
    ViewData["Title"] = "Gate Pass Details";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Gate Pass Request Details</h3>
        </div>

        <div class="card-body p-4">
            <dl class="row mb-0">
                <dt class="col-sm-4">ID</dt>
                <dd class="col-sm-8">@Model.Id</dd>

                <dt class="col-sm-4">School Year</dt>
                <dd class="col-sm-8">@Model.SchoolYear</dd>

                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Address</dt>
                <dd class="col-sm-8">@Model.Address</dd>

                <dt class="col-sm-4">Date</dt>
                <dd class="col-sm-8">@Model.Date.ToString("MMMM dd, yyyy")</dd>

                <dt class="col-sm-4">Role</dt>
                <dd class="col-sm-8">@Model.Role</dd>

                <dt class="col-sm-4">Department</dt>
                <dd class="col-sm-8">@Model.Department</dd>

                <dt class="col-sm-4">Course Year</dt>
                <dd class="col-sm-8">@Model.CourseYear</dd>

                <dt class="col-sm-4">Plate Number</dt>
                <dd class="col-sm-8">@Model.PlateNumber</dd>

                <dt class="col-sm-4">Maker</dt>
                <dd class="col-sm-8">@Model.Maker</dd>

                <dt class="col-sm-4">Color</dt>
                <dd class="col-sm-8">@Model.Color</dd>

                <dt class="col-sm-4">Status</dt>
                <dd class="col-sm-8">
                    <span class="badge
                        @(Model.Status == "Approved" ? "bg-success" :
                                                    Model.Status == "Denied" ? "bg-danger" :
                                                    "bg-warning text-dark")">
                        @Model.Status
                    </span>
                </dd>

                <dt class="col-sm-4">Study Load</dt>
                <dd class="col-sm-8">
                    @if (!string.IsNullOrEmpty(Model.StudyLoadPath))
                    {
                        <a href="@Url.Content(Model.StudyLoadPath)" target="_blank" class="btn btn-outline-primary btn-sm">
                            View Study Load
                        </a>
                    }
                    else
                    {
                        <span class="text-muted">No file uploaded</span>
                    }
                </dd>

                <dt class="col-sm-4">Registration Form</dt>
                <dd class="col-sm-8">
                    @if (!string.IsNullOrEmpty(Model.RegistrationPath))
                    {
                        <a href="@Url.Content(Model.RegistrationPath)" target="_blank" class="btn btn-outline-primary btn-sm">
                            View Registration
                        </a>
                    }
                    else
                    {
                        <span class="text-muted">No file uploaded</span>
                    }
                </dd>
            </dl>
        </div>

        <div class="card-footer text-end">
            <form asp-action="ApproveGatePass" method="post" class="d-inline">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-success">Approve</button>
            </form>
            <form asp-action="DenyGatePass" method="post" class="d-inline">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger">Deny</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>
