@{
    ViewData["HideNav"] = true;
    ViewData["Title"] = "Sign Up";
    ViewData["FullScreen"] = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-page-container">
    <div class="login-header-nav">
        <div class="login-brand-logo">ELDNET</div>
        <div class="login-nav-links">
            <a href="#">HOME</a>
            <a href="#">ABOUT US</a>
            <a href="#" class="login-nav-active">SIGN UP</a>
        </div>
    </div>

    <div class="login-clouds"></div>

    <div class="login-main-content">
        <div class="login-form-panel custom-card">
            <h2 class="login-panel-heading">Sign Up</h2>
            <h9 class="login-subtitle">Join ELDNET to streamline your student processes.</h9>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mb-3" role="alert">
                    @ViewBag.Error
                </div>
            }

            <form asp-controller="Account" asp-action="SignUp" method="post" class="login-input-form">
                <div class="login-input-group mb-4">
                    <span class="login-input-icon"><i class="fas fa-user"></i></span>
                    <input type="text" class="form-control" id="FullName" name="fullName" placeholder="Full Name" required />
                </div>

                <div class="login-input-group mb-4">
                    <span class="login-input-icon"><i class="fas fa-envelope"></i></span>
                    <input type="email" class="form-control" id="Email" name="email" placeholder="Email Address" required />
                </div>

                <div class="login-input-group mb-4">
                    <span class="login-input-icon"><i class="fas fa-key"></i></span>
                    <input type="password" class="form-control" id="Password" name="password" placeholder="Password" required />
                    <span class="login-password-toggle"><i class="fas fa-eye-slash"></i></span>
                </div>

                <div class="login-input-group mb-4">
                    <span class="login-input-icon"><i class="fas fa-key"></i></span>
                    <input type="password" class="form-control" id="ConfirmPassword" name="confirmPassword" placeholder="Confirm Password" required />
                    <span class="login-password-toggle"><i class="fas fa-eye-slash"></i></span>
                </div>

                <!-- Account Type Radio Buttons - Integrated into your styling -->
                <div class="login-input-group mb-4">
                    <label class="form-label d-block mb-2">Account Type:</label>
                    <div class="d-flex justify-content-center">
                        @* Added for horizontal alignment of radio buttons *@
                        <div class="form-check form-check-inline me-3">
                            @* Added margin for spacing *@
                            <input class="form-check-input" type="radio" name="accountType" id="accountTypeStudent" value="Student" checked>
                            <label class="form-check-label" for="accountTypeStudent">Non-Faculty</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="accountType" id="accountTypeFaculty" value="Faculty">
                            <label class="form-check-label" for="accountTypeFaculty">Faculty</label>
                        </div>
                    </div>
                </div>
                <!-- End Account Type Radio Buttons -->

                <button type="submit" class="btn btn-gradient">Sign Up</button>

                <div class="login-signup-text text-center mt-4">
                    Already have an account? <a asp-controller="Account" asp-action="Login">Sign In</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Re-apply password toggle logic to all password fields
            const passwordFields = document.querySelectorAll('#Password, #ConfirmPassword');
            passwordFields.forEach(field => {
                const inputGroup = field.closest('.login-input-group');
                if (inputGroup) {
                    const passwordToggle = inputGroup.querySelector('.login-password-toggle');
                    if (passwordToggle) {
                        passwordToggle.addEventListener('click', function () {
                            const icon = this.querySelector('i');
                            const type = field.getAttribute('type') === 'password' ? 'text' : 'password';
                            field.setAttribute('type', type);

                            if (type === 'text') {
                                icon.classList.remove('fas', 'fa-eye-slash');
                                icon.classList.add('far', 'fa-eye');
                            } else {
                                icon.classList.remove('far', 'fa-eye');
                                icon.classList.add('fas', 'fa-eye-slash');
                            }
                        });
                    }
                }
            });
        });
    </script>
}