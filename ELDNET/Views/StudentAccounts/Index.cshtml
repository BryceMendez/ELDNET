@model IEnumerable<ELDNET.Models.StudentAccount>

@{
    ViewData["Title"] = "Student Accounts";
}

<style>
    /* Search/filter horizontal layout like Approvals page */
    .search-filter-card {
        padding: 0.75rem 1rem;
        background-color: #f8f9fa;
        border-radius: 0.75rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
        margin-bottom: 1rem;
        display: flex;
        gap: 0.5rem;
        flex-wrap: nowrap;
        align-items: center;
    }

        .search-filter-card .form-control {
            flex-grow: 1;
            min-width: 200px;
            border-radius: 0.5rem;
            border: 1px solid #ced4da;
            height: 38px;
        }

        .search-filter-card .btn {
            flex-shrink: 0;
            height: 38px;
            border-radius: 0.5rem;
            background-color: #0d6efd;
            color: #fff;
            border: none;
            transition: background-color 0.3s;
        }

            .search-filter-card .btn:hover {
                background-color: #0b5ed7;
                color: #fff;
            }

    /* Table header light blue with white text */
    #studentTable thead {
        background-color: #b3d9ff; /* Light blue header */
    }

        #studentTable thead th {
            color: #003366 !important; /* Dark blue text for contrast */
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
        }
</style>

<div class="page-wrapper bg-white">

    <!-- Page Header -->
    <div class="text-center mb-3 mt-4">
        <h2 class="display-6 fw-bold text-gradient-blue" style="font-size: 3rem;">
            <i class="bi bi-mortarboard-fill me-3"></i>Student Accounts
        </h2>
        <p class="lead text-muted mt-2">
            Monitor and manage all registered student accounts.
        </p>
    </div>

    <!-- Success Message -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 rounded-5 shadow-sm mb-4 px-4 py-3" role="alert" style="border-radius: 30px;">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Student Accounts Table Box -->
    <div class="card border-0 shadow-lg overflow-hidden mt-n2 rounded-5">
        <div class="card-header bg-white text-dark border-0 py-3 px-4 d-flex justify-content-between align-items-center rounded-top-5">
            <h5 class="mb-0 fw-semibold text-dark">
                <i class="bi bi-people-fill me-2"></i> Registered Students
            </h5>
            <span class="fw-semibold fs-6 text-dark">
                Total Students: <span id="totalStudents">@Model?.Count()</span>
            </span>
        </div>

        <!-- Search Bar -->
        <div class="px-4 pt-3">
            <div class="search-filter-card">
                <input type="text" id="studentNameSearch" class="form-control" placeholder="Search by name..." />
                <button id="studentSearchBtn" class="btn d-flex align-items-center gap-1">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
        </div>

        <div class="card-body pt-0 px-4 pb-4 rounded-bottom-5">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="studentTable">
                    <thead>
                        <tr>
                            <th class="ps-4">#</th>
                            <th>Student ID</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int counter = 1;
                            foreach (var student in Model)
                            {
                                <tr data-name="@student.FullName.ToLower()">
                                    <td class="ps-4 text-muted">@counter</td>
                                    <td>
                                        <span class="badge bg-light text-primary fw-semibold px-3 py-2 rounded-pill border border-primary">
                                            @student.StudentId
                                        </span>
                                    </td>
                                    <td class="fw-semibold text-dark">@student.FullName</td>
                                    <td class="text-muted">@student.Email</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@student.Id"
                                               class="btn btn-primary rounded-pill px-3 me-2">
                                                <i class="bi bi-eye-fill me-1"></i> View
                                            </a>

                                            <!-- Delete Button -->
                                            <button type="button" class="btn btn-danger rounded-pill px-3"
                                                    data-bs-toggle="modal" data-bs-target="#deleteModal@(student.Id)">
                                                <i class="bi bi-trash3-fill me-1"></i> Delete
                                            </button>
                                        </div>

                                        <!-- Delete Confirmation Modal -->
                                        <div class="modal fade" id="deleteModal@(student.Id)" tabindex="-1" aria-labelledby="deleteModalLabel@(student.Id)" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content border-0 rounded-5 shadow-lg">
                                                    <div class="modal-header bg-gradient-danger border-0 rounded-top-5">
                                                        <h5 class="modal-title text-white fw-semibold" id="deleteModalLabel@(student.Id)">
                                                            <i class="bi bi-exclamation-triangle-fill me-2"></i> Confirm Deletion
                                                        </h5>
                                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body p-4">
                                                        <p>Are you sure you want to delete this student account?</p>
                                                        <h6 class="fw-bold text-danger">
                                                            @student.FullName
                                                            <span class="text-muted">(ID: @student.StudentId)</span>
                                                        </h6>
                                                        <p class="text-muted small mt-3 mb-0">This action cannot be undone.</p>
                                                    </div>
                                                    <div class="modal-footer border-top-0 pt-0 justify-content-center">
                                                        <button type="button" class="btn btn-outline-secondary rounded-pill px-4" data-bs-dismiss="modal">
                                                            Cancel
                                                        </button>
                                                        <form asp-action="Delete" asp-route-id="@student.Id" method="post" class="d-inline">
                                                            <button type="submit" class="btn btn-danger rounded-pill px-4">Delete</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                counter++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="bi bi-emoji-frown display-6 d-block mb-2"></i>
                                    <h5 class="fw-semibold mb-1">No Student Accounts Found</h5>
                                    <p class="small mb-0">There are currently no registered students.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            function filterStudents() {
                const searchText = $('#studentNameSearch').val().toLowerCase();
                let total = 0;
                $('#studentTable tbody tr').each(function () {
                    const row = $(this);
                    const name = row.data('name');
                    if (name.includes(searchText)) {
                        row.show();
                        total++;
                    } else row.hide();
                });
                $('#totalStudents').text(total);
            }

            $('#studentNameSearch').on('keyup', filterStudents);
            $('#studentSearchBtn').on('click', filterStudents);
        });
    </script>
}
