@model ELDNET.Models.GatePass

@functions {
    public string GetStatusColorClass(string status)
    {
        return status switch
        {
            "Approved" => "text-success",
            "Denied" => "text-danger",
            _ => "text-warning"
        };
    }

    public string GetStatusIcon(string status)
    {
        return status switch
        {
            "Approved" => "<i class='bi bi-check-circle-fill text-success fs-2'></i>",
            "Denied" => "<i class='bi bi-x-circle-fill text-danger fs-2'></i>",
            _ => "<i class='bi bi-hourglass-split text-warning fs-2'></i>"
        };
    }

    public string GetStatusBadge(string status)
    {
        return status switch
        {
            "Approved" => "<span class='badge bg-success w-100 py-2'>Approved</span>",
            "Denied" => "<span class='badge bg-danger w-100 py-2'>Denied</span>",
            _ => "<span class='badge bg-warning text-dark w-100 py-2'>Pending Review</span>"
        };
    }
}

@{
    ViewData["Title"] = "Gate Pass Details";
}

@section Styles {
    <link rel="stylesheet" href="~/css/GatePass/Details.css" asp-append-version="true" />
}

<div class="container py-4 animate__animated animate__fadeIn">
    <div class="custom-card shadow-lg border-0 bg-white rounded-4 overflow-hidden">

        <div class="card-header text-white text-center py-4" style="background: linear-gradient(45deg, #03AC13, #028a0f);">
            <div class="d-flex justify-content-between align-items-center px-lg-4 px-2">
                <div class="text-start">
                    <h2 class="mb-0 fw-bold"><i class="bi bi-car-front-fill me-2"></i>Gate Pass Details</h2>
                    <p class="mb-0 text-white-50 small">Reference ID: #@Model.Id | Date Applied: @Model.Date.ToString("MMM dd, yyyy")</p>
                </div>
                <div class="status-badge-container">
                    <span class="badge rounded-pill px-4 py-2 bg-white text-dark shadow-sm">
                        Current Status: <strong class="@GetStatusColorClass(Model.Status)">@Model.Status.ToUpper()</strong>
                    </span>
                </div>
            </div>
        </div>

        <div class="card-body p-lg-5 p-4">
            <div class="row g-4">

                <div class="col-lg-6">
                    <h5 class="section-title text-success pb-2 border-bottom mb-3"><i class="bi bi-person-badge me-2"></i>Applicant Information</h5>
                    <div class="info-grid p-4 rounded-3 bg-light border">
                        <dl class="row mb-0">
                            <dt class="col-sm-5 text-muted">Full Name</dt>
                            <dd class="col-sm-7 fw-bold">@Model.Name</dd>

                            <dt class="col-sm-5 text-muted">ID Number</dt>
                            <dd class="col-sm-7 fw-bold text-primary">
                                @(string.IsNullOrEmpty(Model.StudentId) ? Model.FacultyId : Model.StudentId)
                                <small class="text-muted d-block" style="font-size: 0.7rem;">(@Model.Role)</small>
                            </dd>

                            <dt class="col-sm-5 text-muted">School Year</dt>
                            <dd class="col-sm-7">@Model.SchoolYear</dd>

                            <dt class="col-sm-5 text-muted">Department</dt>
                            <dd class="col-sm-7">@Model.Department</dd>

                            <dt class="col-sm-5 text-muted">Course & Year</dt>
                            <dd class="col-sm-7">@Model.CourseYear</dd>

                            <dt class="col-sm-5 text-muted">Address</dt>
                            <dd class="col-sm-7 small">@Model.Address</dd>
                        </dl>
                    </div>
                </div>

                <div class="col-lg-6">
                    <h5 class="section-title text-primary pb-2 border-bottom mb-3"><i class="bi bi-truck me-2"></i>Vehicle Details</h5>
                    <div class="info-grid p-4 rounded-3 bg-light border">
                        <dl class="row mb-0">
                            <dt class="col-sm-5 text-muted">Plate Number</dt>
                            <dd class="col-sm-7 fw-bold text-danger">@Model.PlateNumber</dd>

                            <dt class="col-sm-5 text-muted">Vehicle Type</dt>
                            <dd class="col-sm-7">@Model.VehicleType</dd>

                            <dt class="col-sm-5 text-muted">Make / Model</dt>
                            <dd class="col-sm-7">@Model.Maker</dd>

                            <dt class="col-sm-5 text-muted">Color</dt>
                            <dd class="col-sm-7">@Model.Color</dd>

                            <dt class="col-sm-5 text-muted">Reg. Expiry</dt>
                            <dd class="col-sm-7">
                                <span class="@(Model.RegistrationExpiryDate < DateTime.Now ? "text-danger fw-bold" : "")">
                                    @Model.RegistrationExpiryDate.ToString("MMMM dd, yyyy")
                                </span>
                            </dd>

                            <dt class="col-sm-5 text-muted">Applicant Edit</dt>
                            <dd class="col-sm-7">
                                @(Model.IsChangedByApplicant ? "Yes (Updated)" : "No")
                            </dd>
                        </dl>
                    </div>
                </div>

                <div class="col-12 mt-4">
                    <h5 class="section-title text-secondary pb-2 border-bottom mb-3">
                        <i class="bi bi-file-earmark-pdf me-2"></i>Attachments
                    </h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            @if (!string.IsNullOrEmpty(Model.StudyLoadPath))
                            {
                                <a href="@Url.Content(Model.StudyLoadPath)" target="_blank" class="attachment-link-card">
                                    <div class="attachment-icon-wrapper">
                                        <i class="bi bi-file-earmark-text-fill"></i>
                                    </div>
                                    <div class="attachment-info">
                                        <span class="attachment-label">Study Load</span>
                                        <span class="attachment-action text-success">View Document <i class="bi bi-box-arrow-up-right ms-1"></i></span>
                                    </div>
                                </a>
                            }
                            else
                            {
                                <div class="attachment-link-card missing">
                                    <div class="attachment-icon-wrapper">
                                        <i class="bi bi-file-earmark-x"></i>
                                    </div>
                                    <div class="attachment-info">
                                        <span class="attachment-label">Study Load</span>
                                        <span class="attachment-action text-danger">Missing File</span>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="col-md-6">
                            @if (!string.IsNullOrEmpty(Model.RegistrationPath))
                            {
                                <a href="@Url.Content(Model.RegistrationPath)" target="_blank" class="attachment-link-card">
                                    <div class="attachment-icon-wrapper">
                                        <i class="bi bi-card-checklist"></i>
                                    </div>
                                    <div class="attachment-info">
                                        <span class="attachment-label">Registration Form</span>
                                        <span class="attachment-action text-success">View Document <i class="bi bi-box-arrow-up-right ms-1"></i></span>
                                    </div>
                                </a>
                            }
                            else
                            {
                                <div class="attachment-link-card missing">
                                    <div class="attachment-icon-wrapper">
                                        <i class="bi bi-file-earmark-x"></i>
                                    </div>
                                    <div class="attachment-info">
                                        <span class="attachment-label">Registration Form</span>
                                        <span class="attachment-action text-danger">Missing File</span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-12 mt-5">
                    <h4 class="text-center mb-4 fw-bold"><i class="bi bi-diagram-3-fill me-2"></i>Approval Workflow Tracker</h4>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="card h-100 border shadow-sm text-center p-3">
                                <div class="mb-2">@Html.Raw(GetStatusIcon(Model.Approver1Status))</div>
                                <h6 class="fw-bold mb-1">@Model.Approver1Name</h6>
                                <p class="text-muted small mb-2">Step 1: OSD Director</p>
                                @Html.Raw(GetStatusBadge(Model.Approver1Status))
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card h-100 border shadow-sm text-center p-3">
                                <div class="mb-2">@Html.Raw(GetStatusIcon(Model.Approver2Status))</div>
                                <h6 class="fw-bold mb-1">@Model.Approver2Name</h6>
                                <p class="text-muted small mb-2">Step 2: Dean of Students</p>
                                @Html.Raw(GetStatusBadge(Model.Approver2Status))
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card h-100 border shadow-sm text-center p-3">
                                <div class="mb-2">@Html.Raw(GetStatusIcon(Model.Approver3Status))</div>
                                <h6 class="fw-bold mb-1">@Model.Approver3Name</h6>
                                <p class="text-muted small mb-2">Step 3: Security Head</p>
                                @Html.Raw(GetStatusBadge(Model.Approver3Status))
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 mt-5">
                    <div class="p-4 rounded-4 @(Model.FinalStatus == "Approved" ? "bg-success-subtle border-success" : (Model.FinalStatus == "Denied" ? "bg-danger-subtle border-danger" : "bg-light border")) border text-center">
                        <p class="mb-1 text-muted text-uppercase fw-bold small">Final Evaluation Result</p>
                        <h2 class="fw-bold @(Model.FinalStatus == "Approved" ? "text-success" : (Model.FinalStatus == "Denied" ? "text-danger" : "text-dark"))">
                            @Model.FinalStatus
                        </h2>

                        @if (Model.FinalStatus == "Denied" && !string.IsNullOrEmpty(Model.DenialReason))
                        {
                            <div class="mt-3 pt-3 border-top border-danger-subtle">
                                <h6 class="text-danger fw-bold"><i class="bi bi-exclamation-octagon-fill me-2"></i>Reason for Denial:</h6>
                                <p class="mb-0 text-dark">@Model.DenialReason</p>
                            </div>
                        }
                    </div>
                </div>

            </div>

            <div class="col-12 text-center pt-5 mt-4 border-top">
                <a href="@(Model.Status == "Approved" ? "javascript:void(0)" : Url.Action("Edit", new { id = Model.Id }))"
                   class="btn btn-success btn-lg px-5 me-2 shadow edit-btn"
                   data-status="@Model.Status">
                    <i class="bi bi-pencil-square me-2"></i>Edit Request
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 shadow-sm">
                    <i class="bi bi-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</div>