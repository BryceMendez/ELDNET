@model ELDNET.Models.LockerRequest

@{
    ViewData["Title"] = "Edit Locker Request";
}

<div class="container py-4 animate__animated animate__fadeIn">
    <div class="custom-card shadow-lg border-0 edit-card">
        <div class="card-header text-white text-center py-4 edit-header-blue">
            <h2 class="mb-2 fw-bold"><i class="bi bi-pencil-square me-2"></i>Edit Locker Request</h2>
            <p class="mb-0 text-white-75">Update the details for this locker request.</p>
        </div>
        <div class="card-body p-5">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="StudyLoadPath" />
                <input type="hidden" asp-for="RegistrationPath" />

                <div class="row g-5">
                    <!-- Requestor Information Section -->
                    <div class="col-lg-6 border-end-lg pe-lg-5">
                        <h5 class="text-blue-primary mb-4 pb-2 border-bottom border-blue-primary-subtle">
                            <i class="bi bi-person-fill me-2"></i>Requestor Information
                        </h5>
                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Name" />
                            <label asp-for="Name"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="IdNumber" class="form-control" placeholder="ID Number" />
                            <label asp-for="IdNumber"></label>
                            <span asp-validation-for="IdNumber" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="ContactNumber" class="form-control" placeholder="Contact Number" />
                            <label asp-for="ContactNumber"></label>
                            <span asp-validation-for="ContactNumber" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Semester" class="form-control" placeholder="Semester" />
                            <label asp-for="Semester"></label>
                            <span asp-validation-for="Semester" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Locker & Document Information Section -->
                    <div class="col-lg-6 ps-lg-5">
                        <h5 class="text-blue-secondary mb-4 pb-2 border-bottom border-blue-secondary-subtle">
                            <i class="bi bi-key-fill me-2"></i>Locker & Document Information
                        </h5>
                        <div class="form-floating mb-3">
                            <input asp-for="LockerNumber" class="form-control" placeholder="Locker Number" />
                            <label asp-for="LockerNumber"></label>
                            <span asp-validation-for="LockerNumber" class="text-danger"></span>
                        </div>

                        <h5 class="text-blue-tertiary mb-3 mt-4 pb-2 border-bottom border-blue-tertiary-subtle">
                            <i class="bi bi-file-earmark-arrow-up-fill me-2"></i>Update Files
                        </h5>
                        <div class="mb-3">
                            <label class="form-label d-block text-muted mb-2">Study Load (PDF)</label>
                            <input type="file" name="studyLoadFile" class="form-control" />
                            <span asp-validation-for="StudyLoadFile" class="text-danger d-block mt-1"></span>
                            @if (!string.IsNullOrEmpty(Model.StudyLoadPath))
                            {
                                <small class="form-text text-muted mt-2 d-block">Current file: <a href="@Model.StudyLoadPath" target="_blank" class="details-file-link">View Study Load</a></small>
                            }
                        </div>
                        <div class="mb-3">
                            <label class="form-label d-block text-muted mb-2">Registration Form (PDF)</label>
                            <input type="file" name="registrationFile" class="form-control" />
                            <span asp-validation-for="RegistrationFile" class="text-danger d-block mt-1"></span>
                            @if (!string.IsNullOrEmpty(Model.RegistrationPath))
                            {
                                <small class="form-text text-muted mt-2 d-block">Current file: <a href="@Model.RegistrationPath" target="_blank" class="details-file-link">View Registration Form</a></small>
                            }
                        </div>
                        <div class="form-check mt-4">
                            <input class="form-check-input" asp-for="AcceptTerms" />
                            <label class="form-check-label" asp-for="AcceptTerms">Accept Terms and Conditions</label>
                            <span asp-validation-for="AcceptTerms" class="text-danger d-block"></span>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="col-12 text-center pt-5 border-top mt-5">
                    <button type="submit" class="btn btn-primary btn-lg me-3" style="min-width: 140px;">
                        <i class="bi bi-cloud-arrow-up-fill me-2"></i>Update
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg" style="min-width: 140px;">
                        <i class="bi bi-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
