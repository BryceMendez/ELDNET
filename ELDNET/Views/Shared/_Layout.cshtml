<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ELDNET</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ELDNET.styles.css" asp-append-version="true" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body class="bg-light d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm py-3" style="font-size: 1.4rem;">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-white d-flex align-items-center"
                   asp-area="" asp-controller="Home" asp-action="Index"
                   style="font-size: 2rem; padding-left: 1.5rem;">
                    <i class="bi bi-building me-4" style="font-size: 2.3rem;"></i>
                    ELDNET
                </a>

                <!-- Toggler (mobile menu) -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nav Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item me-4">
                            <a class="nav-link text-white px-3" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door" style="font-size: 1.4rem;"></i> Home
                            </a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link text-white px-3" asp-area="" asp-controller="Student" asp-action="Index">
                                <i class="bi bi-person" style="font-size: 1.4rem;"></i> Student
                            </a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link text-white px-3" asp-controller="GatePass" asp-action="Index">
                                <i class="bi bi-door-open" style="font-size: 1.4rem;"></i> Gate Pass
                            </a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link text-white px-3" asp-controller="ReservationRoom" asp-action="Index">
                                <i class="bi bi-calendar-event" style="font-size: 1.4rem;"></i> Reservation Room
                            </a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link text-white px-3" asp-controller="LockerRequest" asp-action="Index">
                                <i class="bi bi-lock" style="font-size: 1.4rem;"></i> Locker Request
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white px-3" asp-controller="Approval" asp-action="Index">
                                <i class="bi bi-check-circle" style="font-size: 1.4rem;"></i> Approval
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container my-4 flex-grow-1">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <footer class="text-dark text-center py-3 mt-auto" style="background-color: rgba(211, 211, 211, 0.7);">
        <div class="container">
            <small>&copy; @DateTime.Now.Year - ELDNET | All Rights Reserved</small>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
